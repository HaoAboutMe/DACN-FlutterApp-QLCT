<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041C32"
    android:minHeight="220dp"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/widget_quick_actions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tác vụ nhanh"
                android:textColor="#E0F7FA"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_quick_action_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Nhấn giữ để chỉnh"
                android:textColor="#9CECFB"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/quick_action_slot_1"
                    style="@style/WidgetQuickActionSlot"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quick_action_icon_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/widget_icon_circle_bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_default_category" />

                    <TextView
                        android:id="@+id/quick_action_label_1"
                        style="@style/WidgetQuickActionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Thêm"
                        android:textColor="#BFE9FF"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quick_action_slot_2"
                    style="@style/WidgetQuickActionSlot"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quick_action_icon_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/widget_icon_circle_bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_default_category" />

                    <TextView
                        android:id="@+id/quick_action_label_2"
                        style="@style/WidgetQuickActionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Thêm"
                        android:textColor="#BFE9FF"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quick_action_slot_3"
                    style="@style/WidgetQuickActionSlot"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quick_action_icon_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/widget_icon_circle_bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_default_category" />

                    <TextView
                        android:id="@+id/quick_action_label_3"
                        style="@style/WidgetQuickActionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Thêm"
                        android:textColor="#BFE9FF"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quick_action_slot_4"
                    style="@style/WidgetQuickActionSlot"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quick_action_icon_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/widget_icon_circle_bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_default_category" />

                    <TextView
                        android:id="@+id/quick_action_label_4"
                        style="@style/WidgetQuickActionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Thêm"
                        android:textColor="#BFE9FF"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quick_action_slot_5"
                    style="@style/WidgetQuickActionSlot"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quick_action_icon_5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/widget_icon_circle_bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_default_category" />

                    <TextView
                        android:id="@+id/quick_action_label_5"
                        style="@style/WidgetQuickActionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Thêm"
                        android:textColor="#BFE9FF"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Chi tiêu tháng này"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_month_chip_bg"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="11/2025"
            android:textColor="#9CECFB"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:paddingBottom="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/categories_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 danh mục chi nhiều nhất tháng"
                android:textColor="#E0F7FA"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/category_1_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/widget_category_row_bg"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                android:paddingEnd="8dp"
                android:paddingBottom="6dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/category_1_color_bar"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:background="#339CECFB"
                    android:scaleType="fitXY"
                    android:src="@android:color/transparent" />

                <ImageView
                    android:id="@+id/category_1_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/widget_icon_circle_bg"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_default_category" />

                <TextView
                    android:id="@+id/category_1_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Ăn uống"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category_1_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="60.2%"
                    android:textColor="#BFE9FF"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/category_2_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/widget_category_row_bg"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                android:paddingEnd="8dp"
                android:paddingBottom="6dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/category_2_color_bar"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:background="#339CECFB"
                    android:scaleType="fitXY"
                    android:src="@android:color/transparent" />

                <ImageView
                    android:id="@+id/category_2_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/widget_icon_circle_bg"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_default_category" />

                <TextView
                    android:id="@+id/category_2_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Di chuyển"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category_2_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="28.0%"
                    android:textColor="#BFE9FF"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/category_3_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/widget_category_row_bg"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                android:paddingEnd="8dp"
                android:paddingBottom="6dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/category_3_color_bar"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:background="#339CECFB"
                    android:scaleType="fitXY"
                    android:src="@android:color/transparent" />

                <ImageView
                    android:id="@+id/category_3_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/widget_icon_circle_bg"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_default_category" />

                <TextView
                    android:id="@+id/category_3_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Mua sắm"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category_3_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="18.0%"
                    android:textColor="#BFE9FF"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder Title"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <FrameLayout
                android:id="@+id/widget_chart_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/widget_chart_glow_bg"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/widget_pie_chart"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="Biểu đồ chi tiêu"
                    android:scaleType="fitCenter" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/widget_empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Chưa có dữ liệu\nMở Whales Spent để đồng bộ"
        android:textAlignment="center"
        android:textColor="#BFE9FF"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>