<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041C32"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Chi tiêu tháng này"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_month_chip_bg"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="11/2025"
            android:textColor="#9CECFB"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/categories_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 danh mục chi nhiều nhất tháng"
                android:textColor="#E0F7FA"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/category_1_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/widget_category_row_bg"
                android:gravity="center_vertical"
                android:minHeight="44dp"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/category_1_color_bar"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:background="#339CECFB"
                    android:scaleType="fitXY"
                    android:src="@android:color/transparent" />

                <ImageView
                    android:id="@+id/category_1_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/widget_icon_circle_bg"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_default_category" />

                <TextView
                    android:id="@+id/category_1_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Ăn uống"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category_1_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="60.2%"
                    android:textColor="#BFE9FF"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/category_2_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/widget_category_row_bg"
                android:gravity="center_vertical"
                android:minHeight="44dp"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/category_2_color_bar"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:background="#339CECFB"
                    android:scaleType="fitXY"
                    android:src="@android:color/transparent" />

                <ImageView
                    android:id="@+id/category_2_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/widget_icon_circle_bg"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_default_category" />

                <TextView
                    android:id="@+id/category_2_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Di chuyển"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category_2_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="28.0%"
                    android:textColor="#BFE9FF"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/category_3_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/widget_category_row_bg"
                android:gravity="center_vertical"
                android:minHeight="44dp"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/category_3_color_bar"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:background="#339CECFB"
                    android:scaleType="fitXY"
                    android:src="@android:color/transparent" />

                <ImageView
                    android:id="@+id/category_3_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/widget_icon_circle_bg"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_default_category" />

                <TextView
                    android:id="@+id/category_3_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Mua sắm"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category_3_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="18.0%"
                    android:textColor="#BFE9FF"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/widget_chart_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_chart_glow_bg"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/widget_pie_chart"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Biểu đồ chi tiêu"
                    android:scaleType="fitCenter" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/widget_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Chưa có dữ liệu\nMở Whales Spent để đồng bộ"
        android:textAlignment="center"
        android:textColor="#BFE9FF"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>



